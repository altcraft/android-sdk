<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_altcraft_label"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_altcraft_label"
        android:supportsRtl="true"
        android:theme="@style/Theme.AltcraftMobile"
        tools:targetApi="31">

        <!--Main-->
       <activity
           android:name=".MainActivity"
           android:exported="true"
           android:launchMode="singleTop">

           <!-- for app start -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- for deep link -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="altcraft.main" />
            </intent-filter>
        </activity>

        <!--DeepLink-->
        <activity
            android:name=".deeplink.DeepLinkActivity"
            android:exported="true">

            <!-- for deep link -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="altcraft.deep"/>
            </intent-filter>
        </activity>

        <!-- fcm service -->
        <service
            android:name=".providers.fcm.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- hms service -->
        <service
            android:name=".providers.hms.HMSService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.huawei.push.action.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <!-- rustore service -->
        <service
            android:name=".providers.rustore.RuStoreService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="ru.rustore.sdk.pushclient.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>